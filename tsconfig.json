{
	"compileOnSave": false,
	"compilerOptions": {
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"outDir": "./.out",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2017",
		"lib": ["es2018", "dom"]
	},
	"exclude": ["node_modules"],
	"include": ["*.ts", "auth/*.json"]
}
